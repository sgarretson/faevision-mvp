{
  "name": "faevision-simplified",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "type-check": "tsc --noEmit",
    "build:test": "node scripts/comprehensive-build-test.js",
    "build:safe": "npm run build:test && npm run build",
    "pre-deploy": "npm run build:test",
    "typescript:audit": "tsc --noEmit --strict 2>&1 | tee typescript-audit.log",
    "typescript:strict": "tsc --noEmit --strict",
    "prisma:verify": "npx prisma validate && npx prisma generate && ls src/generated/prisma/libquery_engine-rhel-openssl-3.0.x.so.node",
    "prisma:reset-generate": "rm -rf node_modules/@prisma/client && rm -rf src/generated/prisma && npx prisma generate",
    "vercel:test-auth": "node scripts/test-preview-deployment.js",
    "compliance:full": "npm run prisma:verify && npm run build:test && npm run vercel:test-auth",
    "test": "vitest run",
    "test:coverage": "vitest run --coverage",
    "test:e2e": "playwright test",
    "test:watch": "vitest --watch",
    "deploy:production": "vercel --prod",
    "db:generate": "prisma generate --no-engine",
    "db:migrate": "prisma migrate dev",
    "db:migrate:deploy": "prisma migrate deploy",
    "db:seed": "npx tsx prisma/seed.ts",
    "db:seed:comprehensive": "npx tsx prisma/seed-comprehensive.ts",
    "db:studio": "prisma studio",
    "db:reset": "prisma migrate reset",
    "github-mcp": "npx @modelcontextprotocol/server-github",
    "prepare": "husky",
    "lint-staged": "lint-staged"
  },
  "dependencies": {
    "@ai-sdk/openai": "^2.0.27",
    "@auth/prisma-adapter": "^2.10.0",
    "@hookform/resolvers": "^5.2.1",
    "@prisma/client": "^6.16.1",
    "@prisma/extension-accelerate": "^2.0.2",
    "@radix-ui/react-checkbox": "^1.3.3",
    "@radix-ui/react-dialog": "^1.1.15",
    "@radix-ui/react-dropdown-menu": "^2.1.16",
    "@radix-ui/react-progress": "^1.1.7",
    "@radix-ui/react-slot": "^1.2.3",
    "@radix-ui/react-tabs": "^1.1.13",
    "@types/bcryptjs": "^2.4.6",
    "ai": "^5.0.39",
    "bcryptjs": "^3.0.2",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "csv-parser": "^3.2.0",
    "date-fns": "^4.1.0",
    "lru-cache": "^11.2.1",
    "lucide-react": "^0.543.0",
    "next": "14.2.32",
    "next-auth": "^5.0.0-beta.29",
    "pg": "^8.16.3",
    "prisma": "^6.15.0",
    "react": "^18",
    "react-dom": "^18",
    "react-hook-form": "^7.62.0",
    "recharts": "^3.2.1",
    "resend": "^6.1.0",
    "tailwind-merge": "^3.3.1",
    "zod": "^4.1.5"
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md,yml,yaml}": [
      "prettier --write"
    ]
  },
  "devDependencies": {
    "@axe-core/playwright": "^4.10.2",
    "@modelcontextprotocol/server-github": "^2025.4.8",
    "@playwright/test": "^1.55.0",
    "@types/node": "^20",
    "@types/react": "^18",
    "@types/react-dom": "^18",
    "@vitejs/plugin-react": "^5.0.2",
    "@vitest/coverage-v8": "^3.2.4",
    "autoprefixer": "^10.4.21",
    "dotenv": "^17.2.2",
    "eslint": "^8",
    "eslint-config-next": "14.2.32",
    "husky": "^9.1.7",
    "jsdom": "^26.1.0",
    "lint-staged": "^16.1.6",
    "postcss": "^8",
    "prettier": "^3.6.2",
    "prettier-plugin-tailwindcss": "^0.6.14",
    "tailwindcss": "^3.4.1",
    "tsx": "^4.20.5",
    "typescript": "^5",
    "vitest": "^3.2.4"
  },
  "prisma": {
    "seed": "npx tsx prisma/seed.ts"
  }
}
